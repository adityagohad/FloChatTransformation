<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/last"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.adzlab.flochattest.ui.fragment.IntroFragment">

    <View
        android:id="@+id/centre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/rotation_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/centre"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/yellow_circle" />

    <ImageView
        android:id="@+id/rotation_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/centre"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/centre"
        android:background="@drawable/red_circle" />

    <ImageView
        android:id="@+id/rotation_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/centre"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/centre"
        android:background="@drawable/green_circle" />

    <ImageView
        android:id="@+id/rotation_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/centre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/blue_circle" />

    <ImageView
        android:id="@+id/rotation_10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/centre"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="80dp"
        android:layout_toLeftOf="@id/centre"
        android:background="@drawable/orange_circle" />

    <ImageView
        android:id="@+id/rotation_8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/centre"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/centre"
        android:background="@drawable/red_circle" />

</RelativeLayout>
